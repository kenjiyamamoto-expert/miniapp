<div class="message clearfix">
    <div class="message_box">
        <p class="text">
          <%= tweet.text %>
        </p>
    </div>
     <% if user_signed_in? && current_user.id == tweet.user_id %>
      <div class="card-action">
                <%= link_to '削除', "/tweets/#{tweet.id}",  method: :delete, class:"btn btn-warning" %>
                <%= link_to '編集', "/tweets/#{tweet.id}/edit", method: :get, class: "btn btn-danger"%>
      </div>
     <% end %>
    </div>
 
